<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="20210720080100-0" author="andriws.silva">
        <createTable tableName="TR_ANEXO_TAREFA">
            <column name="CDN_ANEXO" remarks="Identificador da chave estrangeira da tabela de anexo" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="CDN_TAREFA" remarks="Identificador da chave estrangeira da tabela de tarefas" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="TR_ANEXO_TAREFA" baseColumnNames="CDN_ANEXO"
                                 constraintName="FK_ANEXO_TAREFA" referencedTableName="TB_ANEXO"
                                 referencedColumnNames="CDN_ANEXO"/>
        <addForeignKeyConstraint baseTableName="TR_ANEXO_TAREFA" baseColumnNames="CDN_TAREFA"
                                 constraintName="FK_TAREFA_ANEXO"
                                 referencedTableName="TB_TAREFA"
                                 referencedColumnNames="CDN_TAREFA"/>
    </changeSet>
</databaseChangeLog>